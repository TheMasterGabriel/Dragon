      <input class = "centered" type="submit" style = "top: 80%; left: 30%;" value="Option #1">
    </form>
    <form method = "POST" action = "page3">
      <input name = "name" class = "hidden-input" type = "hidden" value = '<%= @user_dragon.name %>'>
